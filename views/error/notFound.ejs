<% layout('layouts/boilerplate')%>
<div class="d-flex justify-content-center align-items-center bg-light" style="min-height: 80vh;">
    <div class="text-center p-4 rounded shadow" style="background: #fff; max-width: 500px; width: 100%;">
        <img src="/img/placeholder-user.png" alt="Error" style="width:64px;height:64px;" class="mb-3">
        <h1 class="display-4 mb-2 text-danger"><%= err.statusCode || 500 %></h1>
        <h2 class="mb-3"><%= err.message %></h2>
        <% if (err.stack) { %>
            <details class="mb-3">
                <summary>Show Details</summary>
                <pre class="text-start small"><%= err.stack %></pre>
            </details>
        <% } %>
        <a href="/" class="btn btn-primary">Back to Home</a>
    </div>
</div>