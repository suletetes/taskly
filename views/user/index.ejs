<% layout("layouts/boilerplate") %>

<div class="container mt-5">
    <h2 class="text-center">All Users</h2>
    <div class="row">
        <% users.forEach(user => { %>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="user-card">
                    <img src="<%= user.avatar || '/images/placeholder-user.png' %>"
                         alt="<%= user.username %>'s Avatar"
                         class="user-card-img"
                         loading="lazy">
                    <h3 class="text-lg-center mb-lg-1 mt-lg-1"><%= user.username %></h3>
                    <h5 class="text-lg-center">Tasks Completed: <%= user.tasks ? user.tasks.length : 0 %></h5>
                    <a href="/users/<%= user._id %>" class="btn btn-view-profile mt-2">View Profile</a>
                </div>
            </div>
        <% }); %>
    </div>

    <% if (totalPages > 1) { %>
        <nav aria-label="User Pagination" class="d-flex justify-content-center mt-4">
            <ul class="pagination">
                <!-- Previous button -->
                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                    <a href="<%= currentPage > 1 ? `/users?page=${currentPage - 1}` : '#' %>"
                       class="page-link text-center" aria-label="Previous">
                        &laquo;
                    </a>
                </li>

                <!-- Page numbers -->
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                        <a href="/users?page=<%= i %>"
                           class="page-link text-center">
                            <%= i %>
                        </a>
                    </li>
                <% } %>

                <!-- Next button -->
                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                    <a href="<%= currentPage < totalPages ? `/users?page=${currentPage + 1}` : '#' %>"
                       class="page-link text-center" aria-label="Next">
                        &raquo;
                    </a>
                </li>
            </ul>
        </nav>
    <% } %>
</div>