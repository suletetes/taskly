<% layout("layouts/boilerplate") %>

<div class="container mt-5">
    <h2 class="text-center">All Users</h2>
    <div class="row">
        <% users.forEach(user => { %> <!-- Loop through users and render cards -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100 text-center">
                <!-- Display the user's avatar, defaulting to a placeholder if undefined -->
                <img 
                    class="card-img-top" 
                    src="<%= user.avatar || 'https://res.cloudinary.com/dbdbod1wt/image/upload/v1751666550/placeholder-user_rbr3rs.png' %>" 
                    alt="<%= user.username %>'s Avatar" 
                    loading="lazy">
                <!-- Display user details -->
                <div class="card-body">
                    <h5 class="card-title mb-2">
                        <%= user.fullname %> <!-- Display user's full name -->
                    </h5>
                    <p class="card-text">@<%= user.username %></p> <!-- Display username -->
                    <p class="card-text">Tasks Completed: <%= user.tasks ? user.tasks.length : 0 %></p> <!-- Tasks count -->
                    <p class="card-text text-muted">
                        Joined: <%= new Date(user.created_at).toLocaleDateString() %> <!-- Format the creation date -->
                    </p>
                    <a href="/users/<%= user._id %>" class="btn btn-primary">View Profile</a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>

    <!-- Pagination -->
    <nav aria-label="User Pagination" class="mt-4">
        <ul class="pagination justify-content-center">
            <!-- Previous button -->
            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                <a
                    class="page-link"
                    href="/users/paginated?page=<%= currentPage - 1 %>"
                    aria-disabled="<%= currentPage === 1 %>"
                >
                    &laquo;
                </a>
            </li>

            <!-- Page numbers -->
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                    <a class="page-link" href="/users/paginated?page=<%= i %>"><%= i %></a>
                </li>
            <% } %>

            <!-- Next button -->
            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                <a
                    class="page-link"
                    href="/users/paginated?page=<%= currentPage + 1 %>"
                    aria-disabled="<%= currentPage === totalPages %>"
                >
                    &raquo;
                </a>
            </li>
        </ul>
    </nav>
</div>