<% layout('../layouts/boilerplate') %>

<!-- User Profile -->
<div class="bloc l-bloc py-5 bg-light" id="bloc-9">
    <div class="container bloc-lg bloc-no-padding-lg">
        <!-- User Profile Header -->
        <div class="d-flex align-items-center justify-content-center flex-wrap mb-5">
            <div class="me-4 mb-3 mb-md-0 profile-photo-space">
                <picture>
                    <img src="<%= user.avatar %>"
                         class="img-fluid rounded-circle shadow lazyload"
                         data-avatar="<%= user.avatar %>"
                         alt="User Avatar" width="180" height="180" style="object-fit:cover;">
                </picture>
            </div>
            <div>
                <h2 class="fw-bold mb-2"><%= user.name || 'User Name' %></h2>
                <p class="text-muted mb-1"><i class="fa fa-user me-1"></i>Username: <span
                            class="fw-semibold"><%= user.username || 'Username' %></span></p>
                <p class="text-muted mb-3"><i class="fa fa-calendar me-1"></i>Member Since: <span
                            class="fw-semibold"><%= user.memberSince || 'Unknown' %></span></p>
                <a href="/profile/edit" class="btn btn-secondary btn-lg px-4 mt-2 me-2">
                    <i class="fa fa-edit me-2"></i>Edit Profile</a>
                <form action="/profile/delete" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-lg px-4 mt-2">
                        <i class="fa fa-trash me-2"></i>Delete Account</button>
                </form>
            </div>
        </div>
        <hr class="my-5">

        <!-- Productivity & Tasks -->
        <div class="row g-4 justify-content-center">
            <!-- Productivity Stats -->
            <div class="col-12 col-lg-4">
                <div class="card shadow-sm border-0 glass-card mb-4">
                    <div class="card-body">
                        <h5 class="fw-bold mb-4 text-primary"><i class="fa fa-chart-line me-2"></i>Productivity Stats</h5>
                        <div class="row text-center">
                            <div class="col-6 mb-3">
                                <span class="ion ion-checkmark-round icon-md text-success mb-1 d-block"></span>
                                <div class="fw-semibold">Completed</div>
                                <div class="fs-4 fw-bold"><%= stats.completed || 0 %></div>
                            </div>
                            <div class="col-6 mb-3">
                                <span class="fa fa-bolt icon-md text-warning mb-1 d-block"></span>
                                <div class="fw-semibold">Streak</div>
                                <div class="fs-4 fw-bold"><%= stats.streak || 0 %> <span class="fs-6 fw-normal">days</span></div>
                            </div>
                            <div class="col-6 mb-3">
                                <span class="fa fa-times-circle icon-md text-danger mb-1 d-block"></span>
                                <div class="fw-semibold">Failed</div>
                                <div class="fs-4 fw-bold"><%= stats.failed || 0 %></div>
                            </div>
                            <div class="col-6 mb-3">
                                <span class="fa fa-percent icon-md text-primary mb-1 d-block"></span>
                                <div class="fw-semibold">Completion Rate</div>
                                <div class="fs-4 fw-bold"><%= stats.completionRate || 0 %>%</div>
                            </div>
                            <div class="col-6">
                                <span class="fa fa-tasks icon-md text-info mb-1 d-block"></span>
                                <div class="fw-semibold">Ongoing</div>
                                <div class="fs-4 fw-bold"><%= stats.ongoing || 0 %></div>
                            </div>
                            <div class="col-6">
                                <span class="fa fa-clock icon-md text-secondary mb-1 d-block"></span>
                                <div class="fw-semibold">Avg. Time</div>
                                <div class="fs-4 fw-bold"><%= stats.avgTime || '0 hrs' %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Task Cards Section -->
            <div class="col-12 col-lg-8">
                <div class="d-flex flex-column gap-4">
                    <% if (tasks && tasks.length) { %>
                        <% tasks.forEach(task => { %>
                            <div class="card shadow-lg border-0 rounded-4 overflow-hidden glass-card border-start border-5 
                                <%= task.status === 'completed' ? 'border-success' :
                                    task.status === 'failed' ? 'border-danger' :
                                        task.status === 'in-progress' ? 'border-info' : 'border-warning' %>">
                                <div class="card-body p-4">
                                    <div class="d-flex align-items-center mb-3">
                                        <span class="fa 
                                            <%= task.status === 'completed' ? 'fa-check-circle text-success' :
                                                task.status === 'failed' ? 'fa-times-circle text-danger' :
                                                    task.status === 'in-progress' ? 'fa-spinner text-info' : 'fa-tasks text-primary' %>
                                                fa-2x me-3"></span>
                                        <div>
                                            <h4 class="card-title mb-1 fw-bold"><%= task.title %></h4>
                                            <small class="text-muted"><i
                                                    class="fa fa-calendar-alt me-1"></i>Due: <%= task.dueDate ? task.dueDate.toISOString().split('T')[0] : 'No Due Date' %>
                                            </small>
                                        </div>
                                        <span class="badge <%= task.priority === 'High' ? 'bg-danger' :
                                            task.priority === 'Medium' ? 'bg-warning text-dark' : 'bg-success' %>
                                                ms-auto align-self-start px-3 py-2 fs-6">
                                            <i class="fa <%= task.priority === 'High' ? 'fa-bolt' :
                                                task.priority === 'Medium' ? 'fa-arrow-up' : 'fa-arrow-down' %> me-1"></i>
                                            <%= task.priority %>
                                        </span>
                                    </div>
                                    <p class="card-text text-muted mb-3">
                                        <%= task.description || 'No description provided.' %>
                                    </p>
                                    <div class="mb-3">
                                        <% (task.tags || []).forEach(tag => { %>
                                            <span class="badge bg-secondary me-1"><%= tag %></span>
                                        <% }) %>
                                    </div>
                                    <div class="d-flex justify-content-end gap-2">
                                        <a href="/tasks/<%= task._id %>/edit"
                                           class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                            <i class="fa fa-edit me-1"></i>Edit</a>
                                        <form action="/tasks/<%= task._id %>?_method=DELETE" method="POST"
                                              class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                                <i class="fa fa-trash me-1"></i>Delete</button>
                                        </form>
                                        <% if (task.status !== 'completed') { %>
                                            <form action="/tasks/<%= task._id %>/complete" method="POST"
                                                  class="d-inline">
                                                <button type="submit" class="btn btn-success btn-sm rounded-pill px-3">
                                                    <i class="fa fa-check me-1"></i>Done</button>
                                            </form>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-center text-muted">No tasks available. Create a new task to get started!</p>
                    <% } %>
                </div>
                <!-- Pagination -->
                <nav class="d-flex justify-content-center mt-5" aria-label="Task pagination">
                    <ul class="pagination pagination-lg">
                        <% if (pagination) { %>
                            <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                                <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
        <!-- End Productivity & Tasks -->
    </div>
</div>